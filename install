#!/usr/bin/env bash

#
# Installation script for the dot CLI.
#
# Authors: Tyll Wei√ü <inkdpixels@gmail.com>
#
DOT_DIR="$HOME/.dotfiles"

source $DOT_DIR/lib/constants/profile

# install prerequisites
sudo apt-get update
sudo apt-get upgrade -y

sudo apt-get install -y git nfs-kernel-server nfs-common rpcbind mysql-server php5 php5-cli php5-gd php5-common php5-mysql gcc imagemagick php5-imagick curl

sudo apt-get install -f -y

if [ ! -z $DETECTED_PROFILE ]; then
	echo "Installing the dot CLI into $DETECTED_PROFILE..."
	echo "export PATH=$PATH:`pwd`/bin" >> $DETECTED_PROFILE && source $DETECTED_PROFILE
	echo "Success. Type in 'dot help' to get started."
	exit 0
fi
