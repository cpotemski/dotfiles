#!/usr/bin/env bash

#
# A helper function which tests if a file exists.
#
# Author: Tyll Wei√ü <inkdpixels@gmail.com>
#
# Arguments:
# $1 The filepath to check.
#
# Usage:
# if isFileExecutable "$HOME/.aliases"; then
#		echo "File '$HOME/.aliases' exists."
# fi
#
isFileExecutable() {
	if [[ -x "$1" ]]; then
		return 0
	else
		return 1
	fi
}
